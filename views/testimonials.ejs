<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('imports'); -%>
    <link rel="shortcut icon" href="../public/images/linguagem_icon.png">
  </head>
  <body>
    <header>
      <%- include('navbar'); -%>
    </header>
    
    <div class="container">
        <div class="testimonials">
            <% testimonials.forEach((item) => { %>
                <div>
                  <div class="image-testimonials">
                      <img src="<%= `/images/${item.image}` %>" class="card-img-top" alt="Testimonials" width="10" height="220">
                  </div>
                  <div class="testemony">
                    <h4>
                      "<%= item.testimony %>"
                    </h4>
                    <br>
                    <p>
                      <%= item.name %> (<%= item.title %>) - <%= item.company %>
                    </p>
                  </div>
                </div>
            <% }); %>
        </div>
            
    </div>

    <footer>
        <%- include('footer'); -%>
    </footer>
  </body>
</html>