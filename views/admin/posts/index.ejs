<!DOCTYPE html>
<html>
  <head>
    <title>Administration in posts</title>
    <%- include('../../imports'); -%>
    <link rel="shortcut icon" href="../../../public/images/linguagem_icon.png">
  </head>
  <body>
    <header>
      <%- include('../../navbar'); -%>
    </header>

    <div class = "container">
      <div class="row">
          <h1>Administration de posts</h1>
      </div>

      <div class="row mb-2">
        <a href="/admin/posts/create" class="btn btn-dark btn-outline-info" > New Post </a>
      </div>

      <div class = "row">
        <table class="table table-hover ">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Code</th>
              <th scope="col">Title</th>
            </tr>
          </thead>
          <tbody class="table-active" >
            <% posts.forEach((post) => { %>
              <tr>
                <td><%= post.id %></td>
                <td><%= post.title %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <footer>
        <%- include('../../footer'); -%>
    </footer>
  </body>
</html>